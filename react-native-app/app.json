{
  "expo": {
    "name": "EcoSync",
    "slug": "ecosync",
    "scheme": "ecosync",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/brand/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/brand/logo_gif.gif",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/brand/logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/brand/logogif.ico"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
